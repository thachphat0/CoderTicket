<%= simple_form_for(@event) do |f| %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-inputs">
    <%= f.input :name %>
    <div class="form-group">
      <%= f.label :venue %>
      <%= f.collection_select :venue_id, Venue.all, :id, :name, {prompt: true}, {:class => 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: true}, {:class => 'form-control'} %>
    </div>
    <%= f.input :starts_at, "data-provide": 'datepicker' %>
    <%= f.input :ends_at, "data-provide": 'datepicker' %>
    <%= f.input :extended_html_description %>
    <%= f.input :hero_image_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>